1: #include <stdio.h>
2:
3: int main() {
4:
5: float valor1, valor2, resultado;
6:
7: // Entrada dos valores
8: printf("Digite o primeiro valor: ");
9: scanf("%f", &valor1);
10:
11: printf("Digite o segundo valor: ");
12: scanf("%f", &valor2);
13:
14: if (valor2 == 0) {
15: printf("Erro: divisao por zero!\n");
16: } else {
17:
18: resultado = valor1 / valor2;
19:
20: printf("O resultado da divisao e: %.2f\n", resultado);
21: }
22:
23: return 0;
24: }
