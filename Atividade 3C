1: #include <stdio.h>
2:
3: int main() {
4:
5: float comprimento, largura, area;
6:
7: printf("Digite o comprimento do retangulo (em metros): ");
8: scanf("%f", &comprimento);
9:
10: printf("Digite a largura do retangulo (em metros): ");
11: scanf("%f", &largura);
12:
13: area = comprimento * largura;
14:
15: printf("A area do retangulo e: %.2f metros quadrados\n", area);
16:
17: return 0;
18: }
